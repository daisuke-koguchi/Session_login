<% if @blog.errors.any?%>
  <div id="error_explanation">
    <h1>エラーは<%= @blog.errors.count %>個あります</h1>
    <ul>
      <% @blog.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<h1>ブログ入力</h1>
<%= form_with(model:@blog ,local: true) do |f| %>
 <%= f.label :title %>
 <%= f.text_field :title %>
 <%= f.label :content %>
 <%= f.text_field :content %>
 <%= f.submit %>
<% end %>